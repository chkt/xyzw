		"test": "./node_modules/mocha/bin/mocha -r ts-node/register test/**/*.ts --exclude test/perf.ts",
		"doc": "./node_modules/.bin/typedoc --theme ../typedoc_theme --readme ./module.md --out ./.docs source/*.ts && cp ./.docs/modules.md ./readme.md",
		"build": "rm -rf ./dist/* && ./node_modules/typescript/bin/tsc"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/mocha": "^9.0",
		"@types/node": "^16.7",
