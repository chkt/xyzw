	},
	"engines": {
		"node": ">=10.0"
	},
	"main": "./dist/index.js",
	"files": [
		"/dist/"
	],
	"scripts": {
		"prepublishOnly": "yarn outdated && yarn test && yarn lint && yarn build && yarn doc",
